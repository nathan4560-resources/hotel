<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hotel2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Hotel2">

        <!-- MainActivity Declaration -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- HomeActivity Declaration -->
        <activity
            android:name=".HomeActivity"
            android:exported="true" />

        <!-- LoginActivity Declaration -->
        <activity
            android:name=".LoginActivity"
            android:exported="true" />

        <!-- RegisterActivity Declaration -->
        <activity
            android:name=".RegisterActivity"
            android:exported="true" />

        <!-- RoomActivity Declaration -->
        <activity
            android:name=".RoomActivity"
            android:exported="true" />

        <!-- SingleRoomActivity Declaration -->
        <activity
            android:name=".SingleRoomActivity"
            android:exported="true" />

        <!-- DoubleRoomActivity Declaration -->
        <activity
            android:name=".DoubleRoomActivity"
            android:exported="false" />

        <!-- TripleRoomActivity Declaration -->
        <activity
            android:name=".TripleRoomActivity"
            android:exported="false" />

        <!-- QuadRoomActivity Declaration -->
        <activity
            android:name=".QuadRoomActivity"
            android:exported="false" />

        <!-- BookingHistoryActivity Declaration -->
        <activity
            android:name=".BookingHistoryActivity"
            android:exported="false" />
    </application>

</manifest>
